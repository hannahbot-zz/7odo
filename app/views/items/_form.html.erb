<%= form_for [@list, @item], html: {class: 'form-horizontal'} do |f| %>

    <div class="control-group">
      <div class="controls">
        Description
        <%= f.text_field :description %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "Add To Do Item", class: 'btn' %>
      </div>
    </div>

<% end %>
